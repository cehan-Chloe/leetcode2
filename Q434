public class Solution {
    public int countSegments(String s) {
        if (s == null || s.length() == 0){
            return 0;
        }
        s.trim();
        String[] sArr = s.split(" ");
        int res = 0;
        for (int i = 0; i < sArr.length; i ++){
            if (sArr[i].length() != 0){
                res ++;
            }
        }
        return res;
    }
}
